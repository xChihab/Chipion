<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox xmlns="http://javafx.com/javafx/8"
      xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="com.example.chipion1.ModeSelectionController"
      spacing="30"
      alignment="CENTER"
      stylesheets="@style.css"
      style="-fx-background-color: #0f172a; -fx-padding: 40;">

    <Label text="🕹️ Choisissez votre mode de jeu"
           style="-fx-font-size: 24px; -fx-font-weight: bold; -fx-text-fill: #f1f5f9;" />

    <VBox spacing="15" alignment="CENTER">
        <Button text="👥 Joueur contre Joueur (local)" onAction="#startPvP"
                styleClass="mode-button"/>
        <Button text="🤖 Joueur contre IA" onAction="#startVsAI"
                styleClass="mode-button"/>
        <Button text="🌐 Joueur contre Joueur (en ligne)" onAction="#startOnline"
                styleClass="mode-button"/>
    </VBox>
</VBox>
