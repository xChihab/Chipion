<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox xmlns="http://javafx.com/javafx/8"
      xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="com.example.chipion1.ModeSelectionController"
      alignment="CENTER"
      spacing="20"
      style="-fx-background-color: #f0f0f0;">

    <padding>
        <Insets top="30" right="30" bottom="30" left="30"/>
    </padding>

    <Label text="Choisissez le mode de jeu"
           style="-fx-font-size: 18px; -fx-font-weight: bold; -fx-text-fill: #2c3e50;"/>

    <VBox spacing="10" alignment="CENTER">
        <Button text="Joueur contre Joueur (local)" onAction="#startPvP"
                style="-fx-font-size: 14px; -fx-background-color: #3498db; -fx-text-fill: white;"/>
        <Button text="Joueur contre IA" onAction="#startVsAI"
                style="-fx-font-size: 14px; -fx-background-color: #2ecc71; -fx-text-fill: white;"/>
        <Button text="Joueur contre Joueur (en ligne)" onAction="#startOnline"
                style="-fx-font-size: 14px; -fx-background-color: #9b59b6; -fx-text-fill: white;"/>
    </VBox>
</VBox>
